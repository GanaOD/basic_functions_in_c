int	is_prime(int n)
{
	int	i;

	if (n <= 1)
		return (0);

	if (n <= 3)
		return (1);

	if (n % 2 == 0 || n % 3 == 0)
		return (0);

	// Check divisibility by numbers of form 6kÂ±1 up to sqrt(n)
    i = 5;
    while (i * i <= n)
    {
        if (n % i == 0 || n % (i + 2) == 0)
            return (0);
        i += 6;  // Skip numbers that are divisible by 2 or 3
    }
    return (1);
}


